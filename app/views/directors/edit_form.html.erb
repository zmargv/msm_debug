<div class="page-header">
  <h1>Edit Director #<%= @director.id %></h1>
</div>

<form action="/update_director/<%= @director.id %>" class="form-horizontal">
  <!-- Label and input for dob -->
  <div class="form-group">
    <label for="dob" class="col-sm-2 control-label">
      Dob
    </label>
    <div class="col-sm-10">
      <input type="text" id="dob" name="the_dob" placeholder="Dob" class="form-control" value="<%= @director.dob %>">
    </div>
  </div>

  <!-- Label and input for name -->
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">
      Name
    </label>
    <div class="col-sm-10">
      <input type="text" id="name" name="the_name" placeholder="Name" class="form-control" value="<%= @director.name %>">
    </div>
  </div>

  <!-- Label and input for bio -->
  <div class="form-group">
    <label for="bio" class="col-sm-2 control-label">
      Bio
    </label>
    <div class="col-sm-10">
      <textarea id="bio" name="the_bio" placeholder="Bio" class="form-control" rows="3"><%= @director.bio %></textarea>
    </div>
  </div>

  <!-- Label and input for image_url -->
  <div class="form-group">
    <label for="image_url" class="col-sm-2 control-label">
      Image url
    </label>
    <div class="col-sm-10">
      <input type="text" id="image_url" name="the_image_url" placeholder="Image url" class="form-control" value="<%= @director.image_url %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update Director" class="btn btn-primary">
    </div>
  </div>
</form>
